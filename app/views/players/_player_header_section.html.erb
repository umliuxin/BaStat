<div class="player-header-section">
    <div class="container">
          <div class="player-header-content pos-relative">
              <div class="player-header-image">
                  <%= image_tag(player.player_image_url, class: 'activator') %>
              </div>
              <div class="content-wrap padding-all reverse-text-color">

                  <div class="player-header-name">
                      <h1><%= player.name %></h1>
                      <h3>#<%= player.number %> <%= player.position %></h3>
                      <span><%= player.height %> cm</span>
                      <span> / <%= player.weight %> kg</span>
                      <% if player.birthday.present? %><span> / Age <%= age_from_birthday(player.birthday) %></span><% end %>
                  </div>
                  <div class="player-header-stat padding-bottom">
                      <div class="stat-item"><span>PPG</span><%= number_with_precision(player.avg_stat_current_season.points, precision: 1) unless player.avg_stat_current_season.fgm.nil? %></div>
                      <div class="stat-item"><span>RPG</span><%= number_with_precision(player.avg_stat_current_season.rebound, precision: 1) unless player.avg_stat_current_season.fgm.nil? %></div>
                      <div class="stat-item"><span>APG</span><%= number_with_precision(player.avg_stat_current_season.ast, precision: 1) unless player.avg_stat_current_season.fgm.nil? %></div>
                      <div class="stat-item hide-on-med-and-down"><span>FG%</span><%= number_to_percentage(player.avg_stat_current_season.field_goal_percent, precision: 1) unless player.avg_stat_current_season.fgm.nil? %></div>
                      <div class="stat-item hide-on-med-and-down"><span>3P%</span><%= number_to_percentage(player.avg_stat_current_season.three_point_percent, precision: 1) unless player.avg_stat_current_season.fgm.nil? %></div>
                      <div class="stat-item hide-on-med-and-down"><span>FT%</span><%= number_to_percentage(player.avg_stat_current_season.free_throw_percent, precision: 1) unless player.avg_stat_current_season.fgm.nil? %></div>
                  </div>
              </div>
              <div class="player-header-number hide-on-small-and-down"><%= player.number %></div>
          </div>
    </div>
</div>
