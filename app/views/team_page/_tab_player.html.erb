<div class="row" id="tab-player">
  <% @team.current_season.players.each do |player| %>
  <div class="col xs12 s6">
    <div class="card player-card player-card-horizontal responsive js-to-url waves-effect waves-block waves-light" data-url="<%= player_path(player)%>">
      <div class="aspect-content">
        <div class="player-image">
          <%= image_tag('design_guide/player_image.png', class: 'activator') %>
        </div>
      </div>
      <div class="card-content grey lighten-3">
        <div class="row no-margin">
          <div class="col xs12 hide-on-small-and-down">
            <span class="player-number bold activator"><%= player.number %></span>
          </div>
          <div class="col xs12">
            <div class="player-name activator semi-bold"><%= player.name %></div>
            <div class='player-position activator hide-on-med-and-up'><%= player.number %></div>
            <div class='player-position activator'><%= player.position %></div>
          </div>

        </div>
      </div>
    </div>
  </div>


  <% end %>
</div>
