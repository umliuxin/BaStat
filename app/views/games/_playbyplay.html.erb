<div class="match-playbyplay col xs12" id="playbyplay">
  <div class="card-panel play-by-play-section">
    <div class="card-panel-header center-on-small-only">
      <h3 class="reverse-text-color">Play By Play</h3>
    </div>
    <div class="card-panel-content">
      <div class='playbyplay-quarter-filter text-center'>
        <a class="btn-flat" id='pbp-q1'>Q1</a>
        <a class="btn-flat" id='pbp-q2'>Q2</a>
        <a class="btn-flat" id='pbp-q3'>Q3</a>
        <a class="btn-flat" id='pbp-q4'>Q4</a>
      </div>
      <div class="playbyplay-team row fake-row">
        <div class="col xs5 text-align-right"><%= @game.team.team_name %></div>
        <div class="col xs2"></div>
        <div class="col xs5 text-align-left"><%= @game.opponent %></div>
      </div>
      <div class="playbyplay-content">
        <% @quarter_index = 1 %>
        <%= render partial: "playbyplay_item", collection: @game.actions, as: :action %>
      </div>
    </div>
  </div>
</div>
