<h1>GAME Record</h1>

<section>
  <ul>
    <li>Game ID: <%= @game.id %> </li>
    <li>Game Oppo: <%= @game.opponent %></li>
    <li>Recording Quarter: <%= recording_quater(@score.recording_quarter) %> </li>
    <li><%= link_to 'DNP Manage', admin_game_dnp_path(@game.id)%></li>
  </ul>
</section>
<section>
  <% unless @score.end_recording? %>
    <%= link_to 'Quarter End', admin_quarter_end_path(@game), method: 'get'%><br>
  <% end %>
    <%= link_to 'Migrate', admin_game_stat_migrate_path(@game), method: 'get'%>

</section>
<section>
  <h5>Score</h5>
  <%= form_for @score, url: admin_game_update_score_path, method: 'post' do |f| %>
  <%= f.submit %>
  <table>
    <thead>
      <td>Team</td>
      <td>Q1</td>
      <td>Q2</td>
      <td>Q3</td>
      <td>Q4</td>
      <td>Total</td>
    </thead>
    <tbody>
      <tr>
        <td>LSJ</td>
        <td width='80px'><%= f.text_field :point_q1, class: 'small-text-field' %></td>
        <td width='80px'><%= f.text_field :point_q2, class: 'small-text-field' %></td>
        <td width='80px'><%= f.text_field :point_q3, class: 'small-text-field' %></td>
        <td width='80px'><%= f.text_field :point_q4, class: 'small-text-field' %></td>
        <td><%= @score.point_total %></td>
      </tr>
      <tr>
        <td><%= @game.opponent %></td>
        <td width='80px'><%= f.text_field :point_op_q1, class: 'small-text-field' %></td>
        <td width='80px'><%= f.text_field :point_op_q2, class: 'small-text-field' %></td>
        <td width='80px'><%= f.text_field :point_op_q3, class: 'small-text-field' %></td>
        <td width='80px'><%= f.text_field :point_op_q4, class: 'small-text-field' %></td>
        <td><%= @score.point_op_total %></td>
      </tr>
    </tbody>
  </table>
  <% end %>
</section>
<section class='admin-game-form'>
  <%= form_for :move, url: admin_create_action_path do |f| %>
    <%= f.submit %><br>
    <%= f.collection_radio_buttons(:player_id, @player_collection, :id, :name) %>

    <%= f.radio_button :player_id, TEAM_ID %>
    <label for="move_player_id_0">TEAM</label>
    <%= f.radio_button :player_id, OPPO_TEAM_ID %>
    <label for="move_player_id_-1">OPPO</label>


    <br><br>
    <% GAME_ACTION_LIST.each_with_index do |val,index| %>
      <label>
      <%= f.radio_button :action_index, index %> <%= val %>
      </label>
    <% end %>


    <%= f.hidden_field :game_id, value: @game.id %>
    <%= f.hidden_field :quarter, value: @score.recording_quarter %>
    <div>Insert Before:<%= f.text_field :position, value: cookies[:insert_position] %> Clear if adding to the end of list</div>



  <% end %>
</section>

<section>
  <h5>Action List</h5>
  <% @action_list.each do |action| %>
    <%# MOVE SECTION SHOULD BE CREATED on-the-fly%>
    <p><%= action.position %>Player: <%= action.player_name %>, Action: <%=action_from_index(action.action_index)%>,<%= link_to 'Move Up', admin_action_move_postion_path(action.id,'moveup')%>, <%= link_to 'Move Down', admin_action_move_postion_path(action.id,'movedown')%>, <%= link_to 'Remove', admin_delete_action_path(action), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <% end %>
</section>
